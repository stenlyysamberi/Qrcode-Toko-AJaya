<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="570px"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="20px"
    app:cardBackgroundColor="@color/colorBackround"
    android:background="@color/colorBackround">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:layout_alignParentRight="true"
            app:cardBackgroundColor="@color/transparant"
            android:layout_margin="12sp"
            app:cardCornerRadius="20sp"
            android:layout_width="90dp"
            android:layout_height="40dp">
            <TextView

                android:textAllCaps="true"
                android:textSize="20sp"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/stok"
                android:text="56"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/image_produk"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/oip" />
        <RelativeLayout

            android:background="@color/transparant_text"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_margin="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:gravity="center"
                        android:textSize="15sp"
                        android:id="@+id/nama_barang"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="sans-serif"
                        android:text="Minyak Kayu Putih"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:gravity="center"
                        android:layout_below="@+id/nama_barang"
                        android:textSize="15sp"
                        android:id="@+id/id_barcode"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="sans-serif"
                        android:text="7622300761363"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>


                </LinearLayout>

                <ImageView
                    android:id="@+id/ket_join"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_baseline_check_24" />

            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>



</androidx.cardview.widget.CardView>